{
  "name": "@claude-skills/lark-pm",
  "version": "1.0.0",
  "description": "Lark MCP project management tool - Claude Code skill for managing tasks, technical debt, bugs, features, and test records",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "lark-pm": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "claude-code",
    "skill",
    "project-management",
    "lark",
    "feishu",
    "tasks",
    "bugs",
    "technical-debt"
  ],
  "author": "Cinema Platform Team",
  "license": "MIT",
  "dependencies": {
    "@larksuiteoapi/node-sdk": "^1.29.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "ora": "^8.0.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/json2csv": "^5.0.7",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.56.0",
    "msw": "^2.1.2",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
