# Lark (Feishu) API Configuration
# Get these values from https://open.feishu.cn/

# Required: Lark App credentials
LARK_APP_ID=cli_xxxxxxxxxxxxx
LARK_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxx

# Required: User Access Token (for accessing user's Base Apps)
LARK_USER_ACCESS_TOKEN=u-xxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Pre-configured Base App token (if already created)
LARK_BASE_APP_TOKEN=

# Optional: Logging level (debug, info, warn, error)
LARK_LOG_LEVEL=info

# Optional: Retry configuration
LARK_MAX_RETRIES=3
LARK_BASE_DELAY_MS=1000
LARK_BACKOFF_FACTOR=2
