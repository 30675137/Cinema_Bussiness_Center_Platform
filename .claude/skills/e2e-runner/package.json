{
  "name": "@claude-skills/e2e-runner",
  "version": "1.0.0",
  "description": "E2E Test Runner - Unified Playwright test execution with multi-environment support",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "e2e-runner": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint scripts/**/*.ts",
    "format": "prettier --write \"scripts/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation",
    "claude-code-skill"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "zod": "^3.22.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
