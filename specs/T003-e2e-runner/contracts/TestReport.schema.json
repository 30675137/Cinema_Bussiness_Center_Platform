{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cinema-platform/schemas/e2e-runner/TestReport.schema.json",
  "title": "TestReport",
  "description": "Structured test report generated by e2e-runner",
  "type": "object",
  "required": ["metadata", "stats", "artifacts"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Test run metadata",
      "required": ["env_profile", "timestamp", "duration"],
      "properties": {
        "env_profile": {
          "type": "string",
          "description": "Environment profile used for this run",
          "examples": ["saas-staging", "onprem-uat"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Test execution timestamp (ISO 8601)",
          "examples": ["2025-12-30T14:30:00.000Z"]
        },
        "duration": {
          "type": "integer",
          "minimum": 0,
          "description": "Total execution duration in milliseconds",
          "examples": [45320, 120500]
        },
        "playwright_version": {
          "type": "string",
          "description": "Playwright version used for execution",
          "examples": ["1.40.1", "1.41.0"]
        }
      }
    },
    "stats": {
      "type": "object",
      "description": "Test execution statistics",
      "required": ["total", "passed", "failed", "skipped"],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of tests"
        },
        "passed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of passed tests"
        },
        "failed": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of failed tests"
        },
        "skipped": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of skipped tests"
        },
        "flaky": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of flaky tests (passed after retry)"
        }
      }
    },
    "artifacts": {
      "type": "object",
      "description": "Report artifacts (HTML, JSON, screenshots, videos)",
      "required": ["html_report", "json_results"],
      "properties": {
        "html_report": {
          "type": "string",
          "description": "Path to HTML report (index.html)",
          "examples": ["./reports/run-2025-12-30/index.html"]
        },
        "json_results": {
          "type": "string",
          "description": "Path to JSON results file",
          "examples": ["./reports/run-2025-12-30/results.json"]
        },
        "traces_dir": {
          "type": "string",
          "description": "Directory containing test traces (optional)"
        },
        "screenshots_dir": {
          "type": "string",
          "description": "Directory containing screenshots (optional)"
        },
        "videos_dir": {
          "type": "string",
          "description": "Directory containing videos (optional)"
        }
      }
    },
    "failures": {
      "type": "array",
      "description": "Failed test details (optional)",
      "items": {
        "$ref": "#/definitions/TestFailure"
      }
    }
  },
  "definitions": {
    "TestFailure": {
      "type": "object",
      "required": ["file", "title", "error"],
      "properties": {
        "file": {
          "type": "string",
          "description": "Test file path",
          "examples": ["scenarios/inventory/E2E-INVENTORY-001.spec.ts"]
        },
        "title": {
          "type": "string",
          "description": "Test title",
          "examples": ["库存调整审批流程", "创建饮品订单"]
        },
        "error": {
          "type": "string",
          "description": "Error message",
          "examples": [
            "Timeout 30000ms exceeded.",
            "expect(received).toBe(expected)\n\nExpected: 200\nReceived: 500"
          ]
        },
        "stack": {
          "type": "string",
          "description": "Error stack trace"
        },
        "screenshot": {
          "type": "string",
          "description": "Screenshot path (if available)",
          "examples": ["./reports/run-2025-12-30/screenshots/test-failed-1.png"]
        },
        "video": {
          "type": "string",
          "description": "Video path (if available)",
          "examples": ["./reports/run-2025-12-30/videos/test-failed-1.webm"]
        }
      }
    }
  },
  "additionalProperties": false
}
